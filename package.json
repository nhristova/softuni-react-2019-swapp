{
    "name": "swapp",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint src",
        "format": "prettier --write src/**/*.{js,json,css,sccs}",
        "ci": "npm run lint ",
        "test:all": "npm run lint && npm run format && set CI=true && npm test -- --coverage && npm run build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "set CI=true lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "prettier --write",
            "eslint --max-warnings=0",
            "npm run test --bail --findRelatedTests",
            "git add"
        ]
    },
    "dependencies": {
        "@apollo/react-hooks": "^3.1.3",
        "apollo-cache-inmemory": "^1.6.3",
        "apollo-client": "^2.6.4",
        "apollo-link": "^1.2.13",
        "apollo-link-context": "^1.0.19",
        "apollo-link-http": "^1.5.16",
        "apollo-utilities": "^1.3.2",
        "graphql": "^14.5.8",
        "graphql-tag": "^2.10.1",
        "graphql-tag.macro": "^2.0.1",
        "graphql.macro": "^1.4.2",
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.2.0"
    },
    "devDependencies": {
        "cross-env": "^6.0.3",
        "husky": "^4.0.0-beta.5",
        "lint-staged": "^9.4.2"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/index.js",
            "!src/stories/**/*.js",
            "!src/utils.js",
            "!src/timers/**/*.js",
            "!src/basic-mock/**/*.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        }
    }
}
