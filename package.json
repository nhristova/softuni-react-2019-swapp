{
    "name": "swapp",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint src",
        "format": "prettier --write src/**/*.{js,json,css,sccs}",
        "ci": "yarn lint && cross-env CI=true yarn test --coverage"
    },
    "husky": {
        "hooks": {
            "pre-commit": "cross-env CI=true lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "prettier --write",
            "eslint --max-warnings=0",
            "yarn test --bail --findRelatedTests",
            "git add"
        ]
    },
    "dependencies": {
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "react-scripts": "3.2.0"
    },
    "devDependencies": {
        "cross-env": "^6.0.3",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.2"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/index.js",
            "!src/stories/**/*.js",
            "!src/utils.js",
            "!src/timers/**/*.js",
            "!src/basic-mock/**/*.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        }
    }
}
