{
    "name": "swapp",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "npm run format && npm run test:all && react-scripts build",
        "test": "react-scripts test",
        "test:all": "set CI=true&&npm test -- --coverage",
        "eject": "react-scripts eject",
        "format": "prettier --write src/**/*.{js,json,css,sccs}"
    },
    "dependencies": {
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "react-scripts": "3.2.0"
    },
    "devDependencies": {
        "cross-env": "^6.0.3",
        "husky": "^3.0.9",
        "lint-staged": "^9.4.2"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "trailingComma": "all",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "cross-env CI=true lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "prettier --write",
            "eslint --max-warnings=0",
            "npm test --bail --findRelatedTests",
            "git add"
        ]
    },
    "jest": {
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": -10
            }
        }
    }
}
